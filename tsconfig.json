{
  "compilerOptions": {
    "outDir": "dist/src",
    "module": "es6",
    "moduleResolution": "node",
    "target": "es2020",
    "resolveJsonModule": true,
    "importHelpers": true,
    "noEmitOnError": true,
    "allowSyntheticDefaultImports": true,
    "noErrorTruncation": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "exactOptionalPropertyTypes": true,
    "types": [
      "@types/aws-lambda",
      "@types/node"
    ]
  },
  "files": ["src/app.ts"],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.test.ts"
  ]
}
